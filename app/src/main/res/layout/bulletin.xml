<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FA8DA"
    >


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
                android:layout_margin="10dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="#006600"
            android:background="#304FFE"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Time : "
                android:layout_margin="2.5dp"
                android:textSize="20dp"
                android:background="#304FFE"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bulletin_action_time"
                android:text="2016-08-28 14:00:00"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="#536DFE"
                android:textColor="#FFFFff"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2.5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Division :"
            android:textSize="10dp"
            android:padding="5dp"
            android:background="#FFFFff"
            android:textColor="#304FFE"
            android:layout_weight="0.25"
            android:textStyle="bold"
            android:layout_margin="2.5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:layout_weight="0.25"

            android:background="#FFFFff"
            android:textColor="#304FFE"
android:layout_margin="2.5dp"
            android:padding="5dp"
            android:id="@+id/bulletin_division"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Division :"
            android:textStyle="bold"
            android:layout_weight="0.25"
            android:textSize="10dp"
            android:padding="5dp"

            android:background="#FFFFff"
            android:textColor="#304FFE"
android:layout_margin="2.5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:layout_weight="0.25"
            android:padding="5dp"

            android:background="#FFFFff"
            android:textColor="#304FFE"
android:layout_margin="2.5dp"
            android:id="@+id/bulletin_subdivision"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Bulletin Heading"
    android:padding="5dp"
    android:textSize="20dp"
    android:textStyle="bold"
    android:id="@+id/bulletin_heading"

    android:layout_margin="2.5dp"
    android:background="#FFFFff"
    android:textColor="#304FFE"
    />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Reason :"
       android:padding="5dp"
       android:textStyle="bold"
       android:background="#FFFFff"
       android:textColor="#304FFE"
       android:layout_margin="2.5dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bulletin_reason"
        android:text="Due to heavy Storm"
        android:padding="5dp"
        android:background="#FFFFff"
        android:textColor="#304FFE" android:layout_margin="2.5dp"/>
  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details :"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="#304FFE"
                android:textColor="#ffffff"
                android:layout_margin="2.5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bulletin_details"
                android:text="DADABARI GSS 33/11 KV T3 WILL REMAIN OUT OF CIRCUIT FOR MAINTENANCE JOB BY MR. SUBIR GANGULY.DADABARI GSS 33/11 KV T3 WILL REMAIN OUT OF CIRCUIT FOR MAINTENANCE JOB BY MR. SUBIR GANGULY."
                android:padding="5dp"
                android:background="#536DFE"
                android:textColor="#ffffff"
                android:layout_margin="2.5dp"
                         />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Start Time :"
                android:padding="5dp"
                android:layout_margin="2.5dp"
                android:textStyle="bold"
                android:background="#304FFE"
                android:textColor="#FFFFFF"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bulletin_start_time"
                android:text=""
                android:padding="5dp"
                android:layout_margin="2.5dp"
                android:background="#536DFE"
                android:textColor="#ffffff"

                />
                  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="End Time :"
                android:padding="5dp"
                android:layout_margin="2.5dp"
                android:textStyle="bold"
                android:background="#304FFE"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bulletin_end_time"
                android:text=""
                android:padding="5dp"
                android:layout_margin="2.5dp"
                android:background="#4be58f"
                android:textColor="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>